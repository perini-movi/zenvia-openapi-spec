{
    "compilerOptions": {
      "rootDir": ".",
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2018",
      // "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      // "noImplicitAny" : true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": true
      // "noUnusedParameters": true
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "extends": "./tsconfig.json",
    "include": [
        "bin/**/*", "spec", "utils"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  